---
import TagList from './TagList.astro';

const { post } = Astro.props;
const {
  frontmatter: { title, published, updated, tags },
} = post;
console.log(updated);
---

<style>
  h2 {
    text-align: center;
  }
  h4 {
    text-align: center;
    font-weight: normal;
  }
  .postTags {
    margin-top: 0.35em;
  }
</style>

<postHeader>
  <h2>{title}</h2>
  <h4>Originally posted: {published}</h4>
  {(updated !== null) && (updated !== published) ? <h4> Updated: {updated}</h4> : ""}
  <h4 class="postTags">
    <TagList tags={tags} />
  </h4>
</postHeader>
