---
const { label, count } = Astro.props;
const plural = count !== 1 ? "s" : "";
---

<style>
  .tag {
    padding-inline: 4px;
    border-radius: 1px;
    display: inline-block;
    background: #dddddd;
    border: 0px solid;
    color: #555;
    font-size: 90%;
    text-underline-offset: 10000000;
    text-decoration: none;
  }
  .tag:hover {
    text-decoration: underline;
  }
</style>

<a class="tag" href=`/${label}`>
  {label}
  {count !== undefined ? ` (${count} post${plural})` : ""}
</a>
