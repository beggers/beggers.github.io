---
import { SITE_DESCRIPTION } from '../config';
import Footer from './Footer.astro';
import PixiCanvas from './PixiCanvas.astro';
import SiteHeader from './SiteHeader.astro';

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <PixiCanvas />
	<SiteHeader title={title} description={SITE_DESCRIPTION} />
	<body>
    <main>
      <slot />
      <Footer />
    </main>
	</body>
</html>
