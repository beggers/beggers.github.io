---
import SiteHeader from './SiteHeader.astro';
import Footer from './Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<SiteHeader title={title} description={SITE_DESCRIPTION} />
	<body>
    <main>
      <slot />
      <Footer />
    </main>
	</body>
</html>
