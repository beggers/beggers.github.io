---
import Tag from './Tag.astro';

const { tags, tagsToCounts } = Astro.props;
---

<style>
  .taglistitem {
    display: inline;
    padding: 4px;
  }
</style>

<tagList>
  <ul>
    {
      tags.map((tag) => (
        <li class="taglistitem">
          <Tag label={tag} count={(tagsToCounts !== undefined && tagsToCounts[tag]) || undefined}/>
        </li>
      ))
    }
  </ul>
</tagList>